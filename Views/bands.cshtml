@{
  Layout = "Shared/_Layout.cshtml";
}
@if (@Model.Count == 0)
{
  <p>No bands have been added yet.</p>
}
else{
  <h2> Bands: </h2>
  <ul>
  @foreach (var band in Model)
  {
    <li><h3><a href='/band/@band.GetId()'>@band.GetName()</a></h3> </li>
  }
  </ul>
}

<br>
<p><a href="/bands/new">Add a new band</a></p>
<p><a href="/">Return home</a></p>
